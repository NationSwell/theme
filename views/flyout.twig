{% if is_editor == false %}
    <div id="flyout" data-cookie="flyout" data-module='{"name": "flyout:facebook"}' class="hide_mobile">
        <section>
            <header>
                <h4 class="icon icon_nationswell-flag hd-s flyout__heading">{{ flyout_header_text }}</h4>
                <button class="btn btn--close icon icon_close" data-flyout-action="close" data-flyout-disable="0" data-track='{"action": "close"}'></button>
            </header>

            <div class="flyout__content">
                <p>{{ flyout_message_text }}</p>

                <div class="fb-like" data-href="{{ facebook_like_url }}" data-width="450" data-layout="standard" data-action="like" data-show-faces="false" data-share="false" data-ref="flyout" data-module='{"name": "flyout:facebook"}'></div>

                <footer class="tr">
                    <button class="flyout__disable" data-flyout-action="close" data-flyout-disable="{{ flyout_facebook_opt_out_expiration }}" href="#" data-track='{"action": "disable", "value", "{{ flyout_facebook_opt_out_expiration }}"}'>{{ flyout_opt_out_button_text }}</button>
                </footer>

            </div>
        </section>
    </div>
{% endif %}
