{% extends "archive.twig" %}

{% block header %}

{% if video_url is not empty %}
    {# video hero #}
    <div class="hero hero--story hero--video">
        <div class="container">
            <div class="video-container hero--video__container">
                <iframe class="ytplayer" type="text/html" src="{{ video_url }}" frameborder="0"></iframe>
            </div>
        </div>

        <div class="hero-information">
            <div class="hero-information__outer">
                <div class="container container--flex">
                    <div class="hero-information__content">
                        {% if video_caption is not empty %}<p class="hero-information__caption">{{ video_caption }}</p>{% endif %}
                        {% if video_credit is not empty %}<span class="hero-information__credit">{{ video_credit }}</span>{% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% else %}
<div class="hero hero--archive hero--series{% if header_image is empty %} no-image{% endif %}" {% if header_image is not empty %}style="background-image: url({{ header_image.url|resize(1300,600) }})"{% endif %}>

        <div class="container">
            {% if series_enabled %}
                <div class="indicator indicator--blue indicator--title indicator--text icon icon_series">
                        <h5 class="indicator__heading">Series</h5>
                    <h5 class="indicator__subheading">{{ total_posts }} Stories</h5>
                </div>
            {% endif %}

            <h2 class="hd-f hero--series__title"><span>{{ title }}</span></h2>

            {#<div class="sponsor">Presented by <img src="/{{ theme_dir }}/img/sponsor_gm-dark.png" class="sponsor__logo"/></div>#}
        </div>
</div>
{% endif %}

{% if description is not empty %}
<div class="container">
    <div class="archive-intro">
        <div class="archive-share" data-module='{"name": "archive-series"}'>
            <a href="{{ term_facebook_link }}" class="btn btn--facebook btn--share btn--rectangle icon icon_facebook" data-track='{"action": "facebook"}'>{{ facebook_button_bingo_text }}</a>
            <a href="{{ term_twitter_link }}" class="btn btn--twitter btn--share btn--rectangle icon icon_twitter"  data-track='{"action": "twitter"}'>{{ twitter_button_bingo_text }}</a>
        </div>

        <div class="archive-description-copy">
            <p>
                {{ description }}
            </p>
        </div>
    </div>
</div>

{% endif %}

{% endblock %}