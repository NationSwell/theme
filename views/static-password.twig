{% extends "base.twig" %}

{% block content %}
    <div class="container">
        <div class="password-form">
            <form class="form-element" action="/wp-login.php?action=postpass" method="post">

                <div class="password-form-copy"><p>{{ password_copy_welcome }}</p></div>

                <label for="pwbox-{{post.ID}}">Password:</label>
                <div class="flex">
                    <input class="password-box text-input" name="post_password" id="pwbox-{{post.ID}}" type="password" placeholder="" size="20" maxlength="20" />
                    <input class="password-btn" type="submit" name="Submit" value="Login" />
                </div>
            </form>
        </div>
    </div>
{% endblock %}